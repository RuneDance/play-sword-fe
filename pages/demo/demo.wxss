.container{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
}

::-webkit-scrollbar{
  width: 0px;
  height:0px;
}

.title{
  text-align: center;
}

.content{
  margin: auto 45rpx;
  border-radius: 19rpx;
  border:1px solid #BBBBBB;
}

.button{
  margin: auto 45rpx;
}

.button .button-hover {
  background-color: red;
}