/**index.wxss**/

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

::-webkit-scrollbar {
  width: 0px;
  height: 0px;
}

.title {
  color: #000;
  font-weight: bold;
  text-align: center;
  letter-spacing: 2rpx;
}

.content {
  font-size: 33rpx;
  text-indent: 56rpx;
  letter-spacing: 2rpx;
  text-align: left;
  margin: auto 45rpx;
  border-radius: 19rpx;
  border: 1px solid #bbb;
}

.button {
  margin: auto 45rpx;
}